@model appCore_Ejer01.Models.clsNumero
@{
    ViewData["Title"] = "Verificador de Número Primo";
}

<h1>CalcularFactorial</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="CalcularFactorial" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Numero" class="control-label">Ingrese un número:</label>
                <input asp-for="Numero" class="form-control" type="number" required />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>

            <br />
            <div class="form-group">
                <input type="submit" value="Calcular Factorial" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}