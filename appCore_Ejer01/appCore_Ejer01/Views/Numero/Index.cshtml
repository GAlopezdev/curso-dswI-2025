@model appCore_Ejer01.Models.clsNumero
@{
    ViewData["Title"] = "Verificador de Número Primo";
}

<h1>Verificador de Número Primo</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Numero" class="control-label">Ingrese un número:</label>
                <input asp-for="Numero" class="form-control" type="number" required />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>

            <br />
            <div class="form-group">
                <input type="submit" value="Verificar" class="btn btn-primary" />
            </div>
        </form>

        <hr />

        @if (Model.Numero != 0)
        {
            <div class="mt-4 p-3 border rounded @(Model.EsPrimoResultado ? "border-success" : "border-danger")">
                <h4>Resultado:</h4>
                <p>El número **@Model.Numero**</p>
                <p>
                    <strong>
                        @(Model.EsPrimoResultado ? "SÍ es un número primo." : "NO es un número primo.")
                    </strong>
                </p>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
